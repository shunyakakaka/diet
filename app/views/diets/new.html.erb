<div class="ui center aligned header">
  <% if flash[:notice]%>
    <div class="ui negative message">
      <%= flash[:notice] %>
    </div>
  <% elsif flash[:error_messages] %>
    <div class="ui negative message">
      <%= flash[:error_messages]%>
    </div>
  <% end %>
</div>
<%= form_with model: @user, url: diets_path do |f| %>
  <div class="ui form">
    <div class="field">
      <%= f.label :ini_weight, "前回の体重" %>
      <%= f.text_field :ini_weight %>
    </div>
    <div class="field">
      <%= f.label :day_weight, "今回の体重" %>
      <%= f.text_field :day_weight %>
    </div>
    <%= f.submit "記録", class: "ui blue button" %>
<% end %>

<%= link_to "一覧画面", diets_path, class: "ui button" %>